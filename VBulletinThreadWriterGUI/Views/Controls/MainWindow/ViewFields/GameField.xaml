<viewbase:ComboBoxFieldBaseControl  
    x:Class="VBulletinThreadWriterGUI.Views.Controls.MainWindow.ViewFields.GameField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewbase="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.General.Bases"
        mc:Ignorable="d">
    <UserControl.DataContext>
        <viewbase:ComboBoxFieldVM/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Orientation="Horizontal" Width="Auto">
            <Label 
                x:Name="FieldLabelControl" 
                Content="{Binding FieldName, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                Height="{Binding FieldHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>
            <ComboBox 
                x:Name="FieldComboBoxControl"
                Height="{Binding FieldHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                Width="{Binding FieldComboBoxWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                ItemsSource="{Binding ItemsSource}" 
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</viewbase:ComboBoxFieldBaseControl>
