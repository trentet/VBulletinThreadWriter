<Window x:Class="VBulletinThreadWriterGUI.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:general="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.General"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
        <general:ComboBoxField
            x:Name="ReleaseField" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            FieldHeight="28"
            FieldComboBoxWidth="150"
            Width="Auto"/>
        
        <general:PrefixTextBoxField
            x:Name="PatchVersionField" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            FieldHeight="28"
            FieldTextBoxWidth="150"
            Width="Auto"/>
        </StackPanel>
    </Grid>
</Window>
