<UserControl x:Class="VBulletinThreadWriterGUI.Views.Controls.TrainingMethod.ScriptExample.Fields.AdditionalSettingsField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.TrainingMethod"
             xmlns:general="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.General"
             mc:Ignorable="d">
    <Grid Margin="0,0,0,0">
        <StackPanel>
            <Label 
                Content="Additional Settings" 
                HorizontalContentAlignment="Center" 
                Width="215" 
                Height="28"/>
            <general:TextBoxField 
                FieldHeight="28" 
                FieldTextBoxWidth="150"
                FieldName="Description" 
                FieldText=""/>
            <general:FileSelectionTextBoxField 
                FieldName="Images"
                FieldHeight="28"
                FieldTextBoxWidth="150"
                FieldButtonWidth="20"
                FieldButtonText="..."/>
        </StackPanel>
    </Grid>
</UserControl>
