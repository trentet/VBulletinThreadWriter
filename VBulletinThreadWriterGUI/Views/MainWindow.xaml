        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VBulletinThreadWriterGUI"
        xmlns:general="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.General.Bases"
        xmlns:mw="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Width="275" Height="150">
    <Grid>
        <StackPanel Orientation="Vertical">
            <mw:MainWindowView
                x:Name="MainWindowViewControl"/>
