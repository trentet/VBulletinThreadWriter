<UserControl x:Class="VBulletinThreadWriterGUI.Views.Controls.MainWindow.MainWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mwfields="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.MainWindow.Fields"
             xmlns:local="clr-namespace:VBulletinThreadWriterGUI.Views.Controls.MainWindow"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:MainWindowVM/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <mwfields:GameField
                x:Name="GameFieldControl"
                FieldHeight="28"
                FieldComboBoxWidth="120"/>
            <mwfields:SkillField
                x:Name="SkillFieldControl"
                FieldHeight="28"
                FieldComboBoxWidth="120"/>
            <mwfields:TrainingMethodField
                x:Name="TrainingMethodFieldControl"
                FieldHeight="28"
                FieldComboBoxWidth="120"/>
        </StackPanel>
    </Grid>
</UserControl>
